<ThingDef MayRequire="OskarPotocki.VFE.Pirates" ParentName="VFEP_BaseWarcasketGun">
        <defName>GF40k_AstartesHeavyBolter</defName>
        <label>Astartes Heavy bolter</label>
        <description>.75 caliber, 6 rounds, long range, single shot.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/AstartesHeavyBolter</texPath>
			<drawSize>1.0</drawSize>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <WorkToMake>90000</WorkToMake>
            <Mass>59</Mass>
            <AccuracyTouch>0.56</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.72</AccuracyMedium>
            <AccuracyLong>0.68</AccuracyLong>
            <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
        </statBases>
        <weaponTags> <!-- TO MODIFY -->
            <li>WarcasketVeteran</li>
            <li>WarcasketBasic</li>
        </weaponTags>
        <costList> <!-- TO MODIFY -->
            <Steel>300</Steel>
            <Plasteel>80</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GF40k_AstartesHeavyBolterShot</defaultProjectile>
                <warmupTime>2</warmupTime>
                <range>36</range>
				<forcedMissRadius>0.2</forcedMissRadius>
                <burstShotCount>1</burstShotCount>
                <soundCast>Shot_Autocannon</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
				<targetParams>
				  <canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>11</power>
                <cooldownTime>3</cooldownTime>
            </li>
            <li>
                <label>front</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>3</cooldownTime>
            </li>
        </tools>
    </ThingDef>
